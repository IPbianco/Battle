<%= "#{@pl1.name} vs. #{@pl2.name}" %><br>
<%= "P1 HP: #{@pl1.hp}/60 P2 HP: #{@pl2.hp}/60" %><br>
<%="#{@current_player}'s turn"%><br>

<% if @pl1.hp > 0 && @pl2.hp > 0 %>
	<form action= "/punch" method='post'>
	  <button type="submit"> Punch </button>
	</form>
<% end %>

<% if @attack_confirmation %>
  <%= @attack_confirmation %>
  <% if @pl1.hp == 0 %>
  	<br><%= "#{@pl1.name} lost!" %>
  <% elsif @pl2.hp == 0 %>
		<br><%= "#{@pl2.name} lost!" %>
	<% end %>
<% end %>
